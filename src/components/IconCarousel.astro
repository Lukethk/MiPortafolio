---
import type { IconType } from 'react-icons';
import { 
  FaHtml5, FaCss3Alt, FaJs, FaReact, FaVuejs, FaNodeJs, 
  FaPython, FaGitAlt, FaDocker, FaAws, FaDatabase 
} from 'react-icons/fa';
import { 
  SiTailwindcss, SiTypescript, SiAstro, SiFirebase, 
  SiFigma, SiPostgresql, SiMongodb 
} from 'react-icons/si';
import { VscVscode } from 'react-icons/vsc';
import Icon from './Icon';

interface Tool {
  icon: IconType;
  name: string;
  color: string;
}

const tools: Tool[] = [
  { icon: FaHtml5, name: 'HTML5', color: 'hover:text-[#E34F26]' },
  { icon: FaCss3Alt, name: 'CSS3', color: 'hover:text-[#1572B6]' },
  { icon: FaJs, name: 'JavaScript', color: 'hover:text-[#F7DF1E]' },
  { icon: SiTypescript, name: 'TypeScript', color: 'hover:text-[#3178C6]' },
  { icon: FaReact, name: 'React', color: 'hover:text-[#61DAFB]' },
  { icon: FaVuejs, name: 'Vue.js', color: 'hover:text-[#4FC08D]' },
  { icon: SiAstro, name: 'Astro', color: 'hover:text-[#FF5D01]' },
  { icon: SiTailwindcss, name: 'Tailwind', color: 'hover:text-[#06B6D4]' },
  { icon: FaNodeJs, name: 'Node.js', color: 'hover:text-[#339933]' },
  { icon: FaPython, name: 'Python', color: 'hover:text-[#3776AB]' },
  { icon: SiFirebase, name: 'Firebase', color: 'hover:text-[#FFCA28]' },
  { icon: FaDatabase, name: 'SQL', color: 'hover:text-[#4479A1]' },
  { icon: SiPostgresql, name: 'PostgreSQL', color: 'hover:text-[#4169E1]' },
  { icon: SiMongodb, name: 'MongoDB', color: 'hover:text-[#47A248]' },
  { icon: FaGitAlt, name: 'Git', color: 'hover:text-[#F05032]' },
  { icon: FaDocker, name: 'Docker', color: 'hover:text-[#2496ED]' },
  { icon: FaAws, name: 'AWS', color: 'hover:text-[#FF9900]' },
  { icon: SiFigma, name: 'Figma', color: 'hover:text-[#F24E1E]' },
  { icon: VscVscode, name: 'VS Code', color: 'hover:text-[#007ACC]' },
];
---

<div class="w-full overflow-hidden py-12 bg-gradient-to-r from-primary-900/50 via-accent-900/50 to-primary-900/50 backdrop-blur-sm">
  <h3 class="text-center text-2xl font-bold text-primary-200 mb-8">
    Tecnolog√≠as que uso
  </h3>
  
  <div class="relative w-full">
    <!-- Gradient overlays -->
    <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-primary-900 to-transparent z-10"></div>
    <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-primary-900 to-transparent z-10"></div>
    
    <!-- Carousel -->
    <div class="flex space-x-8 animate-scroll group">
      {[...tools, ...tools].map((tool, index) => (
        <div class="flex flex-col items-center justify-center min-w-[80px] sm:min-w-[100px] gap-2 transition-all duration-300">
          <div class={`p-3 sm:p-4 rounded-xl backdrop-blur-sm bg-white/5 border border-white/10 transition-all duration-300 hover:scale-110 hover:border-white/20 ${tool.color} group-hover:[animation-play-state:paused]`}>
            <Icon icon={tool.icon} className="w-6 h-6 sm:w-8 sm:h-8" client:load />
          </div>
          <span class="text-[10px] sm:text-xs text-primary-200 opacity-80 group-hover:opacity-100 transition-opacity">{tool.name}</span>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .group:hover .animate-scroll {
    animation-play-state: paused;
  }

  @media (max-width: 640px) {
    .animate-scroll {
      animation-duration: 45s;
    }
  }
</style>