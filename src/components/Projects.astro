---
const projects = [
  {
    title: "Proyecto 1",
    description: "Una aplicación web moderna construida con React y Node.js",
    image: "https://placehold.co/600x400/1a1a1a/ffffff?text=Proyecto+1",
    tags: ["React", "Node.js", "MongoDB"],
    link: "#"
  },
  {
    title: "Proyecto 2",
    description: "Plataforma de e-commerce con integración de pagos",
    image: "https://placehold.co/600x400/1a1a1a/ffffff?text=Proyecto+2",
    tags: ["Vue.js", "Express", "PostgreSQL"],
    link: "#"
  },
  {
    title: "Proyecto 3",
    description: "Dashboard administrativo con análisis de datos",
    image: "https://placehold.co/600x400/1a1a1a/ffffff?text=Proyecto+3",
    tags: ["Next.js", "Python", "TailwindCSS"],
    link: "#"
  }
];
---

<section id="projects" class="min-h-screen flex items-center justify-center py-12 sm:py-20 relative">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-center mb-8 sm:mb-16 text-white">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-300 to-accent-300 animate-gradient">
        Mis Proyectos
      </span>
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {projects.map(project => (
        <article class="group backdrop-blur-lg bg-white/5 rounded-xl sm:rounded-2xl border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:transform hover:scale-105 overflow-hidden">
          <div class="relative h-40 sm:h-48 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-primary-900/90 to-transparent z-10"></div>
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="p-4 sm:p-6">
            <h3 class="text-lg sm:text-xl font-bold mb-2 text-primary-200 group-hover:text-primary-100 transition-colors">{project.title}</h3>
            <p class="text-sm sm:text-base text-primary-300 group-hover:text-primary-200 mb-4 transition-colors">{project.description}</p>
            <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-full bg-primary-500/20 text-primary-200 border border-primary-500/30">
                  {tag}
                </span>
              ))}
            </div>
            <a
              href={project.link}
              class="inline-flex items-center text-sm sm:text-base text-accent-400 hover:text-accent-300 transition-colors"
              target="_blank"
            >
              Ver proyecto
              <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 ml-1.5 sm:ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-1/4 right-1/3 w-36 sm:w-72 h-36 sm:h-72 bg-primary-500/20 rounded-full filter blur-3xl animate-pulse"></div>
  <div class="absolute bottom-1/4 left-1/3 w-36 sm:w-72 h-36 sm:h-72 bg-accent-500/20 rounded-full filter blur-3xl animate-pulse delay-700"></div>
</section> 